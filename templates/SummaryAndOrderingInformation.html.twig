{%  extends 'base.html.twig' %}

{% block stylesheets %}
    {{  parent() }}
{% endblock %}

{% block body %}
    <section class="container">
        <div class="recap_product col-sm-8 offset-sm-2">
            <h3 class="col-sm-12 text-center pt-2">Récapitulatif de la commande</h3>
            {%  for product in products %}
                <div class="product row text-center pt-2">
                    <p class="col-sm-6">{{ product.getProduct.getName }}</p>
                    <p class="col-sm-2">{{ product.getProduct.getPrice }}€</p>
                    <p class="col-sm-2">{{ product.getQuantity }}</p>
                    <p class="col-sm-2">{{ product.getProduct.getPrice * product.getQuantity}}€</p>
                </div>
            {% endfor %}
            <div class="row">
                <p class="col-sm-10 text-right"> Total:</p>
                <p class="col-sm-2 text-center"> {{ totalPrice }}€</p>
            </div>
        </div>
    </section>

    <section class="container">
        <h3 class="text-center pt-4">Information réservation</h3>
        {{ form_start(form) }}

        <div class="col-sm-12 pb-3">
            <div class="row">
                <div class="col-sm-4">
                    {{ form_row(form.nameClient) }}
                </div>
                <div class="col-sm-4">
                    {{ form_row(form.cellphoneNumber) }}
                </div>
                <div class="col-sm-4">
                    {{ form_row(form.dateWish) }}
                </div>
                <div class="text-center col-sm-12">
                    <button type="submit" class="btn btn-danger">Valider</button>
                </div>
            </div>
        </div>

        {{ form_end(form) }}
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}